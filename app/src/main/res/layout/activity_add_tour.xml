<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etTourName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên tour" />

        <EditText
            android:id="@+id/etDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Điểm đến" />

        <EditText
            android:id="@+id/etCityId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="ID Thành phố" />

        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Giá tour" />

        <EditText
            android:id="@+id/etDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Thời gian (ngày)" />

        <!-- 🖼 ImageView để hiển thị ảnh đã chọn -->
        <ImageView
            android:id="@+id/ivSelectedImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@drawable/tour" />

        <!-- 📸 Button chọn ảnh -->
        <Button
            android:id="@+id/btnChooseImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn ảnh từ thư viện" />

        <EditText
            android:id="@+id/etCategoryId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="ID Danh mục" />

        <EditText
            android:id="@+id/etStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giờ khởi hành (HH:mm)" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả tour"
            android:inputType="textMultiLine" />
        <Spinner
            android:id="@+id/spinnerTourGuides"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnAddTour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm tour"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
