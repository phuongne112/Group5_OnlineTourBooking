<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:id="@+id/passenger_type_label" android:textSize="16sp" android:textStyle="bold"/>
    <EditText android:id="@+id/passenger_name" android:hint="Họ và tên"/>
    <EditText android:id="@+id/passenger_age" android:hint="Tuổi" android:inputType="number"/>
</LinearLayout>
