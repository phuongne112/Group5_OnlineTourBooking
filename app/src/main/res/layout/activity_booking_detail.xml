<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">


<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:gravity="center_horizontal">

<!-- Tiêu đề -->
<TextView
    android:id="@+id/tvTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Booking Detail"
    android:textSize="22sp"
    android:textStyle="bold"
    android:textColor="@android:color/black"
    android:layout_marginBottom="16dp" />

<!-- Nội dung chi tiết trong CardView để tránh ảnh hưởng bởi background -->
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="16dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 🧭 Thông tin Tour -->
        <TextView
            android:id="@+id/tvTourName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên tour"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/tvTourDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả tour"
            android:paddingBottom="12dp" />

        <!-- 👤 Thông tin người đặt -->
        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Người đặt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email" />

        <TextView
            android:id="@+id/tvUserPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SĐT"
            android:paddingBottom="12dp" />

        <!-- 📅 Thông tin đặt chỗ -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày đặt" />

        <TextView
            android:id="@+id/tvAdultChild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Người lớn / Trẻ em" />

        <TextView
            android:id="@+id/tvNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ghi chú" />

        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng giá"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tvBookingStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trạng thái đặt chỗ"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>
    </ScrollView>
