<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="0dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- 🖼 Tour Image - Chiếm full chiều cao bên trái -->
        <ImageView
            android:id="@+id/imgTourImage"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 📋 Thông tin đặt tour (ở giữa) -->
        <LinearLayout
            android:id="@+id/bookingInfoLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgTourImage"
            app:layout_constraintEnd_toStartOf="@id/imgStatusIcon">

            <!-- 🗓 Ngày đặt -->
            <TextView
                android:id="@+id/tvBookingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: 2025-03-12 00:00:00"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />

            <!-- 💳 Trạng thái thanh toán -->
            <TextView
                android:id="@+id/tvPaymentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Status"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="6dp" />

            <Spinner
                android:id="@+id/spinnerPayment"
                android:layout_width="160dp"
                android:layout_height="32dp"
                android:background="@android:color/white"
                android:elevation="4dp" />

            <!-- 📦 Trạng thái đặt chỗ -->
            <TextView
                android:id="@+id/tvBookingStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking Status"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="6dp" />

            <Spinner
                android:id="@+id/spinnerBooking"
                android:layout_width="160dp"
                android:layout_height="32dp"
                android:background="@android:color/white"
                android:elevation="4dp" />

            <!-- 💰 Tổng giá -->
            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3,240 $"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- ✅ Biểu tượng trạng thái -->
        <ImageView
            android:id="@+id/imgStatusIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_status"
            app:tint="@android:color/holo_green_dark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
